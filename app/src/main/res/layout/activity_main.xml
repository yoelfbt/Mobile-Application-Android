<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yoelfebryan.yoelftampubolon_1202150036_modul1.MainActivity"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Makan Malam"
        android:textSize="40dp"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dengan milea"
        android:textSize="25dp"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/inputmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Menu"/>
    <EditText
        android:id="@+id/inputporsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Porsi"
        android:inputType="number"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btneatbus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="eatbus"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnabnormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abnormal"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>
